<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApiTest.MainPage">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">

            <!-- Image Section -->
            <Label 
                x:Name="StatusLabel"
                Text="Ready to load image"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="18"
                HorizontalOptions="Center" />

            <Frame 
                BorderColor="Gray"
                Padding="10"
                CornerRadius="10"
                HeightRequest="400"
                WidthRequest="400"
                HorizontalOptions="Center">
                <Image
                    x:Name="MainImage"
                    SemanticProperties.Description="Image loaded from resources"
                    Aspect="AspectFit"
                    HorizontalOptions="Center"
                    VerticalOptions="Center" />
            </Frame>

            <Label 
                x:Name="ErrorLabel"
                Text=""
                TextColor="Red"
                FontSize="14"
                HorizontalOptions="Center" />

            <Button 
                x:Name="LoadImageButton"
                Text="Load Image"
                SemanticProperties.Hint="Loads the image from resources"
                Clicked="OnLoadImageClicked"
                HorizontalOptions="Center" />

            <Label 
                x:Name="PathLabel"
                Text="Path: Not loaded"
                FontSize="12"
                TextColor="Gray"
                HorizontalOptions="Center" />

            <!-- API Section -->
            <BoxView 
                HeightRequest="2" 
                Color="Gray" 
                Margin="0,20"/>

            <Label 
                x:Name="ApiStatusLabel"
                Text="API Testing Section"
                FontSize="18"
                HorizontalOptions="Center" />

            <HorizontalStackLayout 
                Spacing="10" 
                HorizontalOptions="Center">
                <Button 
                    x:Name="GetButton"
                    Text="Test GET Request"
                    SemanticProperties.Hint="Makes a GET request to test API"
                    Clicked="OnGetClicked"
                    HorizontalOptions="Center" />

                <Button 
                    x:Name="PostButton"
                    Text="Test POST Request"
                    SemanticProperties.Hint="Makes a POST request to test API"
                    Clicked="OnPostClicked"
                    HorizontalOptions="Center" />
            </HorizontalStackLayout>

            <Label 
                x:Name="ResultLabel"
                Text=""
                FontSize="12"
                LineBreakMode="WordWrap"
                HorizontalOptions="FillAndExpand" 
                MaxLines="25"
                Margin="10,0"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
